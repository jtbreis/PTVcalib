{
  "name": "Python Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  "features": {},
  "postCreateCommand": "pip install -r requirements.txt && nbstripout --install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "analytic-signal.preview-tiff"
      ]
    }
  },
  "mounts": [
    "source=/mnt/ssd/julian/particle-tracking,target=/workspaces/PTVcalib/data,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached"
  ]
}